#include <iostream>
using namespace std;

int main() {
	setlocale(0, "");
	int Зима = 1;
	int Весна = 2;
	int Лето = 3;
	int Осень = 4;
	int choice;
	cout << "Зима - 1" << endl;
	cout << "Весна - 2" << endl;
	cout << "Лето - 3" << endl;
	cout << "Осень - 4" << endl;
	cout << "Выберите время года: ";
	cin >> choice;
	if (choice == 1) {
		cout << "Сейчас зима, нужно одеваться тепло - надевайте шапку и перчатки.";
	}
	else if (choice == 2) {
		cout << "Сейчас весна, можно одеваться полегче, но лучше взять с собой куртку.";
	}
	else if (choice == 3) {
		cout << "Сейчас лето, можно одеваться легко и наслаждаться солнцем.";
	}
	else if (choice == 4) {
		cout << "Сейчас осень, следует одеться тепло и взять с собой зонт.";
	}
	else {
		"Такого времени года не существует.";
	}
	return 0;
}
